{
  "manifest_version": 3,
  "name": "俺のプロンプト",
  "version": "1.0.7",
  "description": "選択したテキストや現在のページを各種AIサービスに送信するための拡張機能",
  "permissions": [
    "contextMenus",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://x.com/*",
    "https://*.x.ai/*",
    "https://www.perplexity.ai/*",
    "https://manus.ai/*",
    "https://*.manus.ai/*",
    "https://manus.im/*",
    "https://*.manus.im/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}